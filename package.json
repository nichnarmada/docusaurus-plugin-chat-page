{
  "name": "docusaurus-plugin-chat-page",
  "version": "0.1.7",
  "description": "A Docusaurus plugin for adding an AI-powered chat interface to your documentation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-css",
    "watch": "tsc --watch",
    "clean": "rm -rf lib",
    "copy-css": "cp src/theme/ChatPage/styles.module.css lib/theme/ChatPage/"
  },
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "@docusaurus/utils": "^3.7.0",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.2.6",
    "gray-matter": "^4.0.3",
    "openai": "^4.85.2",
    "react-markdown": "^10.0.0",
    "remark": "^15.0.1",
    "strip-markdown": "^6.0.0"
  },
  "peerDependencies": {
    "@docusaurus/core": ">=2.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.7.0",
    "@docusaurus/types": ">=2.0.0",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "typescript": "^4.2.2"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichnarmada/docusaurus-plugin-chat-page.git"
  },
  "keywords": [
    "docusaurus",
    "documentation",
    "plugin",
    "chat",
    "ai",
    "openai",
    "search"
  ],
  "author": "Nicholas Narmada",
  "license": "MIT"
}
